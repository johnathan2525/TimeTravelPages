@model TimeTravelPages.Pages.Passengers.CreateModel

<h4>Passenger</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Passenger.Name" class="control-label"></label>
                <input asp-for="Passenger.Name" class="form-control" />
                <span asp-validation-for="Passenger.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passenger.PositionInTime" class="control-label"></label>
                <input asp-for="Passenger.PositionInTime" class="form-control" />
                <span asp-validation-for="Passenger.PositionInTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passenger.Destination" class="control-label"></label>
                <input asp-for="Passenger.Destination" class="form-control" />
                <span asp-validation-for="Passenger.Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passenger.TransporterId" class="control-label"></label>
                <select asp-for="Passenger.TransporterId" class ="form-control" asp-items="ViewBag.TransporterId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
